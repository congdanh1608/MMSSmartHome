<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thesis.mmtt2011.homemms.activity.ComposeMessageActivity"
    tools:showIn="@layout/activity_compose_message">

    <ProgressBar
        android:id="@+id/compose_message_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/compose_message_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/compose_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/message_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:hint="@string/message_title"
                    android:imeOptions="actionNext"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:singleLine="true"
                    android:maxLines="1"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">
                <Button
                    android:id="@+id/add_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_contact"
                    style="?android:attr/borderlessButtonStyle"
                    android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
                    android:paddingRight="@dimen/abc_button_padding_horizontal_material"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:id="@+id/contact_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/choose_contact"
                    />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/message_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/type_message"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:singleLine="false"/>
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="64dp"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/attach_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginTop="@dimen/activity_vertical_margin">
                <!--Image-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/image_recycler_view"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"/>
                <!--Audio -->
                <LinearLayout
                    android:id="@+id/play_audio_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:visibility="visible">
                    <ImageButton
                        android:id="@+id/play_button"
                        android:src="@drawable/ic_play_circle_outline_white_36dp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:tint="@color/colorAccent"
                        android:background="@android:color/transparent" />
                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tv_total_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:text="@string/time_default"/>
                </LinearLayout>
                <!--Video-->
                <LinearLayout
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <Button
                        android:id="@+id/bt_play_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play Video"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorAccent"
                        style="?android:attr/borderlessButtonStyle"/>
                    <VideoView
                        android:id="@+id/video_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:visibility="visible"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
